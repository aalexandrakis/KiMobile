<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.aalexandrakis.kimobile"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kimo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.aalexandrakis.kimobile.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aalexandrakis.kimobile.Register"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.aalexandrakis.kimobile.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.aalexandrakis.kimobile.ResetPassword" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.aalexandrakis.kimobile.ResetPassword"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        
        <activity android:name="com.aalexandrakis.kimobile.MainMenu" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.aalexandrakis.kimobile.MainMenu"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        
        <activity android:name="com.aalexandrakis.kimobile.UpdateAccount" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.aalexandrakis.kimobile.UpdateAccount"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>